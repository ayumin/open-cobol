### ISO+IEC+1989-2002 14.8.1 ACCEPT statement

AT_SETUP([ACCEPT FROM DATE/DAY])
AT_KEYWORDS([accept])

AT_DATA([prog.cob], [
       IDENTIFICATION   DIVISION.
       PROGRAM-ID.      prog.
       DATA             DIVISION.
       WORKING-STORAGE  SECTION.
       01 X             PIC X(8).
       PROCEDURE        DIVISION.
           ACCEPT X FROM DATE
           END-ACCEPT.
           INSPECT X CONVERTING "012345678" TO "999999999".
           DISPLAY "(" X ")"
           END-DISPLAY.
           ACCEPT X FROM DATE YYYYMMDD
           END-ACCEPT.
           INSPECT X CONVERTING "012345678" TO "999999999".
           DISPLAY "(" X ")"
           END-DISPLAY.
           ACCEPT X FROM DAY
           END-ACCEPT.
           INSPECT X CONVERTING "012345678" TO "999999999".
           DISPLAY "(" X ")"
           END-DISPLAY.
           ACCEPT X FROM DAY YYYYDDD
           END-ACCEPT.
           INSPECT X CONVERTING "012345678" TO "999999999".
           DISPLAY "(" X ")"
           END-DISPLAY.
           STOP RUN.
])

AT_CHECK([${COMPILE} -o prog prog.cob])
AT_CHECK([./prog], [0],
[(999999  )
(99999999)
(99999   )
(9999999 )
])

AT_CLEANUP
